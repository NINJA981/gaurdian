# ============================================================================
# FORGE-Guard Configuration
# Copy this file to .env and update with your settings
# ============================================================================

# =============================================================================
# Server Configuration
# =============================================================================
API_HOST=0.0.0.0
API_PORT=8000
STREAMLIT_PORT=8501

# =============================================================================
# Detection Settings
# =============================================================================
FALL_DETECTION_ENABLED=true
GESTURE_DETECTION_ENABLED=true
MEDICINE_MONITORING_ENABLED=true
OBJECT_DETECTION_ENABLED=true

# Detection Sensitivity (0.1 to 1.0, higher = more sensitive)
FALL_SENSITIVITY=0.7
GESTURE_HOLD_TIME=2.0
MEDICINE_CHANGE_THRESHOLD=0.3

# =============================================================================
# Video Settings
# =============================================================================
VIDEO_WIDTH=1280
VIDEO_HEIGHT=720
VIDEO_FPS=30
VIDEO_QUALITY=80

# Camera source (0 = default webcam, or RTSP URL)
CAMERA_SOURCE=0

# =============================================================================
# Alert Configuration
# =============================================================================
ALERT_COOLDOWN_SECONDS=30
ALERT_SOUND_ENABLED=true

# =============================================================================
# Twilio Configuration (Optional - for SMS/Call alerts)
# =============================================================================
# Sign up at https://www.twilio.com/ for free trial
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=
EMERGENCY_CONTACT=

# =============================================================================
# Email Configuration (Optional)
# =============================================================================
EMAIL_ENABLED=false
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
ALERT_EMAIL=

# =============================================================================
# Database Configuration (Optional - for cloud sync)
# =============================================================================
# SUPABASE_URL=
# SUPABASE_KEY=

# =============================================================================
# Admin Configuration
# =============================================================================
# Change this password immediately after setup!
ADMIN_PASSWORD=forge2024

# =============================================================================
# Logging
# =============================================================================
LOG_LEVEL=INFO
LOG_FILE=logs/forge_guard.log
